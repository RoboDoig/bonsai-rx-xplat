<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="bonsai_rx_xplat.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:bonsai_rx_xplat"
    xmlns:views="clr-namespace:bonsai_rx_xplat.Views"
    FlyoutHeaderBehavior="Default">

    <FlyoutItem Title="Workflow">
        <Tab>
            <ShellContent
                Title="Bonsai Mobile"
                ContentTemplate="{DataTemplate views:MainPage}"
                Route="MainPage" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Nodes">
        <Tab>
            <ShellContent
                Title="Nodes"
                ContentTemplate="{DataTemplate views:NodeSelection}"
                Route="NodeSelection" />
        </Tab>
    </FlyoutItem>
</Shell>
